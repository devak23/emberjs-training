<section id="todoapp">
  <header id="header">
    <h1>Tasks</h1>
    <input type="text" id="new-todo" onkeydown={{action 'createTodo'}} 
            placeholder="Enter task description" autofocus>
  </header>

  {{outlet}} 
  
  {{#if (gt model.length 0)}}

  <footer id="footer">
    <span id="todo-count">
      <strong>{{remaining.length}}</strong>
      {{pluralize 'item' remaining.length}} left</span>
    <ul id="filters">
      <li>{{#link-to "index" activeClass="selected"}}All{{/link-to}}</li>
      <li>{{#link-to "active" activeClass="selected"}}Active{{/link-to}}</li>
      <li>{{#link-to "completed" activeClass="selected"}}Completed{{/link-to}}</li>
    </ul>

    {{#if completed.length}}
    <button id="clear-completed" onclick={{action 'clearCompleted'}}>
      Clear completed
    </button>
    {{/if}}
    
  </footer>
  {{/if}}

</section>

<footer id="info">
  <p>Double-click to edit an entry.</p>
  <h3>Powered by Ember.js</h3>
</footer>